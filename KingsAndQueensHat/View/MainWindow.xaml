<Window x:Class="KingsAndQueensHat.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thrustfest Team Generator 0.2" Height="724" Width="760">
    <Grid>
        <Button Content="Generate New Teams" HorizontalAlignment="Left" Margin="373,22,0,0" VerticalAlignment="Top"  Click="Button_Click"/>
        <Label Content="Faster" HorizontalAlignment="Left" Margin="187,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Better" HorizontalAlignment="Left" Margin="314,20,0,0" VerticalAlignment="Top"/>
        <Slider Name="SpeedSlider" HorizontalAlignment="Left" Margin="234,22,0,0" VerticalAlignment="Top" Width="75" Minimum="0" Maximum="100" Value="20"/>
        <ItemsControl ItemsSource="{Binding Teams}" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Name}"/>
                            <Label Content="{Binding GameResultStr}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" ItemsSource="{Binding Players}" RowStyle="{StaticResource HighlightRow}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}"/>
                                    <DataGridTextColumn Header="GameScore" Binding="{Binding GameScore}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Orientation="Vertical">
                                <Button Content="Won!" Margin="5" Width="75" Command="{Binding Path=Won}"/>
                                <Button Content="Lost!" Margin="5" Width="75" Command="{Binding Path=Lost}"/>
                                <Button Content="Drew!" Margin="5" Width="75" Command="{Binding Path=Drew}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Label Content="Number of Teams:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TeamCountBox" HorizontalAlignment="Left" Height="23" Margin="123,22,0,0" TextWrapping="Wrap" Text="4" VerticalAlignment="Top" Width="37"/>
        <Label Content="Round:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding NumRounds}" HorizontalAlignment="Left" Margin="57,51,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
